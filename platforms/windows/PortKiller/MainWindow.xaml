                                                               Foreground="#2ecc71"
                                                               FontFamily="Consolas"
                                                               Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding LastError}" 
                                                               FontSize="11" 
                                                               Foreground="#e74c3c"
                                                               TextWrapping="Wrap"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>

                                                <!-- Actions -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
