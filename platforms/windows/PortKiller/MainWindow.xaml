                                                            Padding="6"
                                                            Margin="0,0,4,0">
                                                        <TextBlock Text="ðŸŒ" FontSize="16"/>
                                                    </Button>

                                                    <!-- Stop Button -->
                                                    <Button ToolTip="Stop Tunnel"
                                                            Click="TunnelStop_Click"
                                                            Tag="{Binding}"
                                                            Width="36" Height="36"
                                                            Padding="6">
                                                        <Button.Style>
